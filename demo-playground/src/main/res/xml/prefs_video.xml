<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  <SwitchPreference
    android:key="ffc"
    android:title="@string/title_ffc"/>
  <SwitchPreference
    android:key="exact_match"
    android:title="@string/title_exact_match"/>
  <SwitchPreference
    android:key="updateMediaStore"
    android:title="@string/title_update_media_store"/>
  <SwitchPreference
    android:key="debug"
    android:title="@string/title_debug"/>
<!--
  <SwitchPreference
    android:key="forceClassic"
    android:title="@string/title_force_engine"/>
-->
  <SwitchPreference
    android:key="highQuality"
    android:title="@string/title_quality"/>
  <ListPreference
    android:key="durationLimit"
    android:entries="@array/durations"
    android:entryValues="@array/durationValues"
    android:title="@string/title_duration" />
  <ListPreference
    android:key="sizeLimit"
    android:entries="@array/sizes"
    android:entryValues="@array/sizeValues"
    android:title="@string/title_size" />
  <SwitchPreference
    android:key="mirrorPreview"
    android:title="@string/title_mirror_preview"/>
  <ListPreference
    android:key="focusMode"
    android:entries="@array/focusModes"
    android:entryValues="@array/focusModeValues"
    android:title="@string/title_focus_mode" />
  <ListPreference
    android:key="zoomStyle"
    android:title="@string/title_zoom_style"
    android:entries="@array/zoomStyles"
    android:entryValues="@array/zoomStyleValues"/>
  <ListPreference
    android:key="olockMode"
    android:title="@string/title_olock"
    android:entries="@array/olockTypes"
    android:entryValues="@array/olockValues"/>
  <SwitchPreference
    android:key="useChooser"
    android:title="@string/title_use_chooser"/>
  <ListPreference
    android:key="chronoType"
    android:entries="@array/chronoTypes"
    android:entryValues="@array/chronoValues"
    android:title="@string/title_chrono_type" />
  <SwitchPreference
    android:key="requestPermissions"
    android:title="@string/title_request_permissions"
    android:defaultValue="true"/>
  <SwitchPreference
    android:key="showRuleOfThirds"
    android:title="@string/title_rule_of_thirds"/>

</PreferenceScreen>